end

task install-snowman
  describe Install Snowman decompiler - C++ decompiler (free/open source)
  shell echo "üì¶ Installing Snowman decompiler..."
  shell echo "Checking for build dependencies..."
  shell [ -f /etc/debian_version ] && (sudo apt-get update && sudo apt-get install -y cmake g++ libboost-dev qt5-qmake qtbase5-dev) || [ -f /etc/redhat-release ] && (sudo yum groupinstall -y "Development Tools" && sudo yum install -y cmake boost-devel qt5-qtbase-devel) || [ "$(uname)" = "Darwin" ] && (brew install cmake boost qt@5)
  shell echo "Cloning Snowman repository from verified x64dbg fork..."
  shell cd /tmp && git clone --depth 1 https://github.com/x64dbg/snowman.git snowman-install || (echo "‚ùå Failed to clone repository" && exit 1)
  shell cd /tmp/snowman-install && mkdir -p build && cd build || (echo "‚ùå Failed to create build directory" && exit 1)
  shell echo "Building Snowman (this may take a few minutes)..."
  shell cd /tmp/snowman-install/build && cmake .. || (echo "‚ùå CMake configuration failed" && exit 1)
  shell cd /tmp/snowman-install/build && make -j$(nproc 2>/dev/null || echo 4) || (echo "‚ùå Compilation failed" && exit 1)
  shell echo "Installing to ~/.local/bin..."
  shell mkdir -p ~/.local/bin
  shell if [ -f /tmp/snowman-install/build/nocode/nocode ]; then cp /tmp/snowman-install/build/nocode/nocode ~/.local/bin/snowman; elif [ -f /tmp/snowman-install/build/src/nocode/nocode ]; then cp /tmp/snowman-install/build/src/nocode/nocode ~/.local/bin/snowman; else echo "‚ùå Could not find compiled binary" && exit 1; fi
  shell rm -rf /tmp/snowman-install
  shell echo "‚úì Snowman installed to ~/.local/bin/snowman"
  shell echo "Note: Make sure ~/.local/bin is in your PATH"
  shell echo "Note: Using x64dbg fork for active maintenance"
end

