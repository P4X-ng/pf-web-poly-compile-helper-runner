#!/usr/bin/env python3

# Check if we should use the new enhanced pf system
import os
import sys

# Add the pf-runner directory to Python path
pf_runner_dir = os.path.dirname(os.path.abspath(__file__))
sys.path.insert(0, pf_runner_dir)

# Try to use the new enhanced system, fall back to old if needed
try:
    from pf_main import main
    sys.exit(main(sys.argv[1:]))
except ImportError as e:
    print(f"Warning: Enhanced pf system not available ({e}), falling back to legacy mode", file=sys.stderr)
    # Fall back to original parser
    from pf_parser import main as legacy_main
    sys.exit(legacy_main(sys.argv[1:]))